<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">grid_index_form.grid_index_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Add a Employee</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">grid_index_form</item>
        </item>
    </argument>

    <settings>
        <buttons>
            <button name="back" class="NTTData\Grid\Block\Adminhtml\Button\Back"/>
            <button name="save" class="NTTData\Grid\Block\Adminhtml\Button\Save"/>
        </buttons>
        <namespace>grid_index_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>grid_index_form.grid_index_form_data_source</dep>
        </deps>
    </settings>

    <dataSource name="grid_index_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="*/*/save"/>
        </settings>
     <dataProvider name="grid_index_form_data_source" class="NTTData\Grid\Model\Company\DataProvider">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <fieldset name="personal_data">
        <settings>
            <label>Personal Data</label>
        </settings>

        <field name="company_name" formElement="input" sortOrder="1">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">

                    <item name="label" xsi:type="string" translate="true">Company Name</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">employee</item>

                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Company Name</label>
                <dataScope>company_name</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>

        <field name="first_name" formElement="input" sortOrder="12">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">employee</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">First Name</label>
                <dataScope>first_name</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>

        <field name="last_name" formElement="input" sortOrder="13">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Last Name</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Last Name</label>
                <dataScope>last_name</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>

        <field name="age" formElement="input" sortOrder="14">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Age</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Age</label>
                <dataScope>age</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="type" component="NTTData_Grid/js/option" formElement="select">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Type</label>
                <dataScope>type</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="programmer" xsi:type="array">
                                <item name="value" xsi:type="string">Programmer</item>
                                <item name="label" xsi:type="string">Programmer</item>
                            </option>
                            <option name="designer" xsi:type="array">
                                <item name="value" xsi:type="string">Designer</item>
                                <item name="label" xsi:type="string">Designer</item>
                            </option>
                        </options>
                        <caption translate="true">Select type</caption>
                    </settings>
                </select>
            </formElements>
        </field>

        <field name="language" formElement="select">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Language</label>
                <dataScope>language</dataScope>
                <visible>false</visible>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">Javascript</item>
                                <item name="label" xsi:type="string">Javascript</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">PHP</item>
                                <item name="label" xsi:type="string">PHP</item>
                            </option>
                            <option name="3" xsi:type="array">
                                <item name="value" xsi:type="string">Python</item>
                                <item name="label" xsi:type="string">Python</item>
                            </option>
                            <option name="4" xsi:type="array">
                                <item name="value" xsi:type="string">C++</item>
                                <item name="label" xsi:type="string">C++</item>
                            </option>
                            <option name="5" xsi:type="array">
                                <item name="value" xsi:type="string">Java</item>
                                <item name="label" xsi:type="string">Java</item>
                            </option>
                        </options>
                        <caption translate="true">-- Select language --</caption>
                    </settings>
                </select>
            </formElements>
        </field>

        <field name="designer" formElement="select">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Designer</label>
                <dataScope>designer</dataScope>
                <visible>false</visible>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">UX</item>
                                <item name="label" xsi:type="string">UX</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">Web</item>
                                <item name="label" xsi:type="string">Web</item>
                            </option>
                            <option name="3" xsi:type="array">
                                <item name="value" xsi:type="string">Artist</item>
                                <item name="label" xsi:type="string">Artist</item>
                            </option>
                            <option name="4" xsi:type="array">
                                <item name="value" xsi:type="string">Illustrator</item>
                                <item name="label" xsi:type="string">Illustrator</item>
                            </option>
                        </options>
                        <caption translate="true">-- Select designer --</caption>
                    </settings>
                </select>
            </formElements>
        </field>



    </fieldset>
</form>
