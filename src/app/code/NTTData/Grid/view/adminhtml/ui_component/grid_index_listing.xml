<?xml version="1.0" encoding="UTF-8"?>

<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">grid_index_listing.grid_index_listing_data_source</item>
            <item name="deps" xsi:type="string">grid_index_listing.grid_index_listing_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">grid_company_columns</item>
    </argument>

    <settings>
        <buttons>
            <button name="add" class="NTTData\Grid\Block\Adminhtml\Button\AddButton"/>
        </buttons>
    </settings>

     <!-- <dataSource name="grid_index_listing_data_source" component="Magento_Ui/js/grid/provider">
